<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/mapGroup"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/layoutGroup"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="@dimen/activity_vertical_margin"
        android:paddingHorizontal="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43 Rue de la voie super longue"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorText"/>
                <TextView
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="666 Rue de la longue super voie"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="00:30"
                android:textAlignment="center"
                android:textSize="40dp"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="@color/colorText"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="Alors ceci est une longue description, on va partir de la rue de la voie super lonuge en tram puis en velo puis en trm puis a pied puis en pnoey pour arriver sans mourir a l'INSA"/>

                <ImageButton
                    android:background="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chat_black_24dp"
                    android:onClick="openChat"/>

            </LinearLayout>

            <Button

                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitter le groupe"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@id/descriptionLayout"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>